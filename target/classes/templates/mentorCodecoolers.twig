<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Quest Store</title>
		<link rel="stylesheet" href="/static/assets/stylesheets/main.css">
		<link href="https://fonts.googleapis.com/css?family=Jim+Nightshade" rel="stylesheet">
		<script>


		</script>

	</head>

    <body class="bg">
		<div>
			<header class="primary-header">
				<a href="http://localhost:8800/static/index.html" class="btn button-logout">Logout</a>
			</header>

			<section class="hero row">
                <div class="navbar" id="myNavbar">
                    <div class="primary-nav-left">
                        <a href="http://localhost:8800/mentor/{{ mentor.getLogin }}" class="btn">main</a>
                        <a href="http://localhost:8800/mentor/{{ mentor.getLogin }}/profile" class="btn">profile</a>
                        <a href="http://localhost:8800/mentor/{{ mentor.getLogin }}/contact" class="btn">contact</a>
                    </div>
                    <div class="primary-nav-right">
                        <a href="http://localhost:8800/mentor/{{ mentor.getLogin }}/store" class="btn">store</a>
                        <a href="http://localhost:8800/mentor/{{ mentor.getLogin }}/quest" class="btn">quests</a>
                        <a href="http://localhost:8800/mentor/{{ mentor.getLogin }}/codecooler" class="btn active">codecoolers</a>
                        <a href="javascript:void(0);" class="icon" onclick="myFunction()">&#9776;</a>
                    </div>
                </div>
                <div>
					<h2><br><br><br>Welcome traveler...</h2><br>
				</div>

			</section>

			<div class="profile">
					<h3>Codecoolers</h3>
					<div></div>
			</div>

			<div class="flex-container">
				<table class="info" id="myTable">

					<tr class="tablerow">
						<th>id</th>
						<th>First Name</th>
						<th>Last Name</th>
						<th>login</th>
						<th>class</th>
						<th>Experience</th>
						<th>Coins</th>
						<th>
							<button onclick="addRow()" class="button-add">+</button>
						</th>
					</tr>

					<tr class="tablerow">
						{% for student in studentList %}
                            <th contenteditable="true">{{ student.userId }}</th>
                            <th contenteditable="true">{{ student.firstName }}</th>
                            <th contenteditable="true">{{ student.lastName }}</th>
                            <th contenteditable="true">{{ student.login }}</th>
                            <th contenteditable="true">{{ student.roomName }}</th>
							<th contenteditable="true">{{ student.exp }}</th>
							<th contenteditable="true">{{ student.getInventory().getCoins() }}</th>
                            <th><a class="btn button-logout" href="">Edit</a><a class="btn button-logout" href="http://localhost:8000/students/delete/{{ student.studentId }}">Delete</a><a class="btn button-logout" href="">Grant Reward</a>
                        {% endfor %}
					</tr>

				</table>

		</div>

			<footer class="primary-footer">
					<small>&copy; Ekipa mocna</small>
				<nav>
						<a href="index.html">Home</a>
						<a href="speakers.html">About</a>
						<a href="schedule.html">PlaceHolder</a>
						<a href="venue.html">PlaceHolder</a>
						<a href="contact.html">PlaceHolder</a>
					</nav>
			</footer>
		</div>

 	</body>
</html>
